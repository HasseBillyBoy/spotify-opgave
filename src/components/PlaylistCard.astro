---
const {cover, header, text} = Astro.props;
---
<article>
     <div>
          <img src={cover} alt="noget">
          <h2>{header}</h2>
          <p>{text}</p>
     </div>
</article>
  

<style>

article {
     padding: 15px; 
     width: 150px;
     height: 240px;
     border-radius: 8px;
}

article:hover {
     background-image: linear-gradient(black, rgb(26, 26, 26));
     cursor: pointer;
}

img {
     border-radius: 8px;
}

h2 {
     color: white;
     font-family: Arial, Helvetica, sans-serif;
     font-size: 16px;
}

p {
     color: rgb(156, 156, 156);
     font-family: Arial, Helvetica, sans-serif;
     font-size: 14px;
}

</style>
